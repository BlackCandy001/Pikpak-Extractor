{
  "manifest_version": 3,
  "name": "PikPak URL Extractor PRO",
  "version": "1.0.0",
  "description": "Extract and display pre-signed video URLs from PikPak.",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["https://*.mypikpak.com/*"],
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_title": "PikPak URL Extractor PRO",
    "default_icon": "icon-48.png"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "pikpak-extractor-pro@yourdomain.com",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_title": "PikPak Extractor PRO",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.mypikpak.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://*.mypikpak.com/*"]
    }
  ]
}
